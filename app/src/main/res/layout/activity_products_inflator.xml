<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start|center"
    android:layout_margin="2dp"
    android:background="@drawable/rect_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/mar_10"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:layout_weight="2"
                android:text="StudentID "
                android:textStyle="bold"
                android:textSize="@dimen/txt_16"
                android:textColor="@color/black"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/studentId_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:layout_weight="1"
                android:text=""
                android:textStyle="bold"
                android:textSize="@dimen/txt_16"
                android:visibility="visible"/>


            <TextView
                android:id="@+id/lastName_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:text=""
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="@dimen/txt_16"
                android:visibility="gone"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:layout_weight="2"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="@dimen/txt_16"
                android:textColor="@color/black"
                android:visibility="visible"/>


            <TextView
                android:id="@+id/firstname_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:layout_weight="1"
                android:text=""
                android:textStyle="bold"
                android:textSize="@dimen/txt_16"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:layout_weight="2"
                android:text="Email"
                android:textStyle="bold"
                android:textSize="@dimen/txt_16"
                android:textColor="@color/black"
                android:visibility="visible"/>


            <TextView
                android:id="@+id/email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:layout_weight="1"
                android:text=""
                android:textStyle="bold"
                android:textSize="@dimen/txt_16"/>
            <TextView
                android:id="@+id/phoneNumber_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:text=""
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="@dimen/txt_16"
                android:visibility="gone"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/mar_5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/approve_btn"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/mar_10"
                android:background="@color/green"
                android:text="Approve"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <Button
                android:id="@+id/deny_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/mar_10"
                android:text="Deny"
                android:background="@color/btn_bg"
                android:textColor="@color/white" />

        </LinearLayout>




    </LinearLayout>



</LinearLayout>