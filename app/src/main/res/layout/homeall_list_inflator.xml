<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/rect_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/liner_ll"
        style="@style/Layout_WMHM"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/item_img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14" />

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/btn_40"
                android:layout_height="@dimen/btn_40"
                android:layout_gravity="top|right|center"
                android:layout_margin="@dimen/mar_5"
                app:cardCornerRadius="@dimen/mar_50">

            <ImageView
                android:id="@+id/fav_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/fav"
                android:scaleType="fitXY"
                android:backgroundTint="@color/hint_color"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14" />

            </androidx.cardview.widget.CardView>



        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/product_name_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_18" />


            <TextView
                android:id="@+id/amount_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/datetime_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>