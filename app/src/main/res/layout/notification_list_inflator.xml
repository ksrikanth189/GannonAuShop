<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="@dimen/mar_5"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="@dimen/mar_5"
    android:background="@color/txt_white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:id="@+id/liner_ll">

    <LinearLayout
        style="@style/Layout_WMHM"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/mar_5"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_14"
            android:src="@mipmap/icon6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="@dimen/mar_10"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_16" />

                <TextView
                    android:id="@+id/totalCount_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_14"
                    android:visibility="gone"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>