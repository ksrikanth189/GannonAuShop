<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    style="@style/Layout_WMHM"
    android:background="@color/black">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/mainDrawerLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/content_frame"
            style="@style/Layout_WMHM"
            android:fitsSystemWindows="true">

            <include
                style="@style/Layout_WMHW"
                layout="@layout/app_bar_layout" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:alpha="0.10"
                    android:backgroundTintMode="src_over"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon6" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/mar_50">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:id="@+id/approve_deny_ll"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/btn_40"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/auction_list"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/btn_35"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/rect_background_merron"
                                android:gravity="center"
                                android:text="Auction"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/donation_list"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/btn_35"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/rect_background_black"
                                android:gravity="center"
                                android:text="Donation"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/auction_search_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/mar_5">


                    <AutoCompleteTextView
                        android:id="@+id/autocomp_search"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_40"
                        android:layout_gravity="center"
                        android:gravity="start|center"
                        android:layout_weight="2"
                        android:paddingLeft="@dimen/mar_15"
                        android:hint="Try typing new"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hint_color"/>

                        <ImageView
                            android:id="@+id/search_imag"
                            android:layout_width="@dimen/btn_35"
                            android:layout_height="@dimen/btn_40"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_menu_search"
                            android:background="@color/btn_bg"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/donation_search_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/mar_5"
                        android:visibility="gone">


                        <AutoCompleteTextView
                            android:id="@+id/autocomp_donat_search"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/btn_40"
                            android:layout_gravity="center"
                            android:gravity="start|center"
                            android:layout_weight="2"
                            android:paddingLeft="@dimen/mar_15"
                            android:hint="Try typing new"
                            android:background="@color/white"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hint_color"/>

                        <ImageView
                            android:id="@+id/donat_search_imag"
                            android:layout_width="@dimen/btn_35"
                            android:layout_height="@dimen/btn_40"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_menu_search"
                            android:background="@color/btn_bg"/>

                    </LinearLayout>



                    <ScrollView
                        android:id="@+id/idNestedSV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            style="@style/Layout_WMHM"
                            android:orientation="vertical">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:divider="@null"
                                android:visibility="visible"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/donation_recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:divider="@null"
                                android:visibility="gone"/>


                            <ProgressBar
                                android:id="@+id/idPBLoading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone" />


                            <TextView
                                android:id="@+id/no_cat_display_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="No history data to show"
                                android:textSize="@dimen/txt_18"
                                android:visibility="gone" />


                        </LinearLayout>

                    </ScrollView>


                </LinearLayout>

            </FrameLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <LinearLayout
            android:id="@+id/mLeftDrawer"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="start|bottom"
            android:layout_marginTop="60dp"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:fitsSystemWindows="true"
            android:orientation="vertical">
            <include
                style="@style/Layout_WMHM"
                layout="@layout/menu_inflator" />

        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
